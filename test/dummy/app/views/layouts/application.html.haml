!!!html
%html
  %head
    %title= yield(:title)
    %meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
    = yield(:meta)
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render_admin_panel
    = #render_flash
    
    - if flash[:notice]
      #notice
        = flash[:notice]
    - if flash[:error]
      #error
        = flash[:error]
    
    = yield